<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_margin="@dimen/x10"
        android:gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_photos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:layout_weight="0.3"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:elevation="@dimen/x10"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:scaleType="fitXY"
                    android:src="@drawable/thumbnail" />

                <!--                <com.jcmore2.collage.CollageView
                                    android:id="@+id/iv_collage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/x10"/>-->

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/x10"
                android:layout_gravity="center"
                android:gravity="start"
                android:orientation="vertical">

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:text="@string/photos"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_qty_photos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.6"
                    android:gravity="start"
                    tools:text="54"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.5"
            android:background="@color/grey"
            android:layout_marginBottom="@dimen/x15"/>

        <LinearLayout
            android:id="@+id/ll_videos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:elevation="@dimen/x10"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_videos"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/video_placeholder" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x10"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_videos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:text="Videos"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_qty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.6"
                    android:gravity="start"
                    tools:text="13"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.5"
            android:background="@color/grey"
            android:layout_marginBottom="@dimen/x15"/>

        <LinearLayout
            android:id="@+id/ll_docs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/x10"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="@dimen/x80"
                android:layout_height="@dimen/x80"
                android:elevation="@dimen/x10"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_documents"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x80"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pdf_image" />

            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/x10"
                android:gravity="center"
                android:orientation="vertical">

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_docs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.6"
                    android:gravity="center"
                    android:text="Documents"
                    android:textColor="@color/black"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_qty_docs"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:alpha="0.6"
                    android:gravity="start"
                    tools:text="2"
                    android:textColor="@color/light_grey"
                    android:textSize="@dimen/x12"
                    app:typeface="@string/font_normal" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:alpha="0.5"
            android:background="@color/grey"
            android:layout_marginBottom="@dimen/x15"/>

    </LinearLayout>

</LinearLayout>
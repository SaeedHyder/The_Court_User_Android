<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_photo_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x10"
                android:layout_centerInParent="true"
                android:layout_alignTop="@id/iv_image"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center"
                android:singleLine="true"
                tools:text="Photo"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x16"
                app:typeface="@string/font_normal" />

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_photo_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/x35"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical|center"
                android:singleLine="true"
                tools:text="12:30pm | 12 Sep 2018"
                android:textColor="@color/light_grey"
                android:textSize="@dimen/x14"
                app:typeface="@string/font_normal" />

            <com.app.court.ui.views.TouchImageView
                android:id="@+id/iv_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/thumbnail" />

            <Button
                android:id="@+id/btn_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/iv_image"
                android:layout_centerInParent="true"
                android:background="@color/transparent"
                android:text="DONE"
                android:textAllCaps="false"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/x16" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>


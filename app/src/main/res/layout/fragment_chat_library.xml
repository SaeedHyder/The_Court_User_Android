<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginStart="@dimen/x10"
        android:layout_marginEnd="@dimen/x10"
        android:layout_marginBottom="@dimen/x10"
        android:gravity="start"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                android:elevation="@dimen/x10"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:scaleType="fitXY"
                    android:src="@drawable/thumbnail" />

                <!--                <com.jcmore2.collage.CollageView
                                    android:id="@+id/iv_collage"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_margin="@dimen/x10"/>-->

            </android.support.v7.widget.CardView>

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_photos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="All Photos"
                android:textColor="#8D8D8D"
                android:textSize="@dimen/x12"
                app:typeface="@string/font_normal"
                android:layout_marginTop="@dimen/x5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/x10"
            android:layout_marginStart="@dimen/x10"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                android:elevation="@dimen/x10"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_videos"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/video_placeholder" />

            </android.support.v7.widget.CardView>

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_videos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="All Videos"
                android:textColor="#8D8D8D"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/x5"
                app:typeface="@string/font_normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/x120"
                android:elevation="@dimen/x10"
                app:cardCornerRadius="@dimen/x8">

                <ImageView
                    android:id="@+id/iv_documents"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/x120"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pdf_image" />

            </android.support.v7.widget.CardView>

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_docs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                tools:text="All Documents"
                android:textColor="#8D8D8D"
                android:textSize="@dimen/x12"
                android:layout_marginTop="@dimen/x5"
                app:typeface="@string/font_normal" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/x10"
        android:paddingStart="@dimen/x10">

        <com.app.court.ui.views.AnyTextView
            android:id="@+id/tv_left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginStart="@dimen/x3"
            android:layout_marginTop="@dimen/x12"
            android:text="asdasdasdasd"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/x10"
            android:src="@drawable/redchatshape" />

        <RelativeLayout
            android:id="@+id/leftLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/leftLayoutChild"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:background="@drawable/red_rounded_box"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x10"
                android:paddingEnd="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_leftImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x90"
                        app:cardCornerRadius="@dimen/x10">

                        <ImageView
                            android:id="@+id/iv_lawyer"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x90"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pdf_image"
                            android:visibility="visible" />

                        <com.app.court.ui.views.AnyTextView
                            android:id="@+id/lawyer_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/x10"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x18"
                            android:visibility="visible"
                            app:typeface="@string/font_bold" />
                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/txtSenderChatLeft"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginTop="@dimen/x10"

                    android:textColor="@color/white"
                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_time_date_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/x5"
                    android:gravity="center_vertical"

                    android:textColor="@color/white"
                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_reciever"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="@dimen/x10"

        android:paddingStart="@dimen/x10">

        <com.app.court.ui.views.AnyTextView
            android:id="@+id/tv_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x4"
            android:layout_marginTop="@dimen/x12"
            android:text="sdfsfsdfsdf"
            android:textColor="@color/black"
            android:textSize="@dimen/x18"
            app:typeface="Roboto-Regular.ttf" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x13"
            android:src="@drawable/greychatshape" />

        <RelativeLayout
            android:id="@+id/RightLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/rightLayout"
                android:layout_width="@dimen/x200"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@drawable/gray_rounded_box"
                android:orientation="vertical"
                android:paddingBottom="@dimen/x10"
                android:paddingEnd="@dimen/x10"
                android:paddingStart="@dimen/x10"
                android:visibility="visible">

                <RelativeLayout
                    android:id="@+id/rl_rightImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/x10"
                    android:gravity="center"
                    android:visibility="gone">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/x90"
                        app:cardCornerRadius="@dimen/x10">

                        <ImageView
                            android:id="@+id/iv_user"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/x90"
                            android:scaleType="centerCrop"
                            android:src="@drawable/bg3"
                            android:visibility="visible" />



                        <com.app.court.ui.views.AnyTextView
                            android:id="@+id/user_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="@dimen/x10"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/x18"
                            android:visibility="visible"
                            app:typeface="@string/font_bold" />

                    </android.support.v7.widget.CardView>

                </RelativeLayout>

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/txtReceiverChatRight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"

                    android:layout_marginTop="@dimen/x10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf" />

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_time_date_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginTop="@dimen/x5"
                    android:textColor="@color/white"

                    android:textSize="@dimen/x12"
                    app:typeface="Roboto-Regular.ttf" />

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:onClick="onClick">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/x5"
        android:layout_marginEnd="@dimen/x5">

        <android.support.v7.widget.CardView
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x75"
            android:elevation="@dimen/x10"
            app:cardCornerRadius="@dimen/x8">

            <ImageView
                android:id="@+id/iv_image"
                android:layout_width="@dimen/x70"
                android:layout_height="@dimen/x75"
                android:scaleType="centerInside"
                tools:src="@drawable/logo" />

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="@dimen/x10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/x5"
                android:orientation="horizontal">

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.4"
                    android:maxLines="1"
                    tools:text="Brandon Kelly"
                    android:textColor="@color/app_dark_gray"
                    android:textSize="@dimen/x13"
                    app:typeface="@string/font_normal" />

                <com.app.court.ui.views.AnyTextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:alpha="0.6"
                    tools:text="12:30 pm | 12 sep 2018"
                    android:textColor="@color/app_dark_gray"
                    android:textSize="@dimen/x13"
                    app:typeface="@string/font_normal" />
            </LinearLayout>

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="3"
                android:alpha="0.8"
                tools:text="@string/lorem_ipsum"
                android:textColor="@color/app_dark_gray"
                android:textSize="@dimen/x13"
                app:typeface="@string/font_normal" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/light_grey"
        android:alpha="0.4"
        android:layout_marginTop="@dimen/x15"
        android:layout_marginBottom="@dimen/x15"/>
</LinearLayout>
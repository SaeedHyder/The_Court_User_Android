<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x55"
        android:background="@color/view_color"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_due"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_due_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/due_payments"
                android:textColor="@color/app_orange"
                android:textSize="@dimen/x15"
                android:layout_weight="1"
                app:typeface="@string/font_bold" />

            <View
                android:id="@+id/view_due"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:layout_weight="0.05"
                android:background="@color/app_orange"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginEnd="@dimen/x30"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <com.app.court.ui.views.AnyTextView
                android:id="@+id/tv_history_payment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_weight="1"
                android:text="@string/payment_history"
                android:textSize="@dimen/x15"
                android:textColor="@color/light_grey"
                app:typeface="@string/font_bold" />

            <View
                android:id="@+id/view_history"
                android:layout_width="match_parent"
                android:layout_height="@dimen/x5"
                android:layout_weight="0.05"
                android:background="@color/app_orange"
                android:layout_marginStart="@dimen/x30"
                android:layout_marginEnd="@dimen/x30"
                android:layout_gravity="center"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mainFrame"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:orientation="vertical" />


</LinearLayout>
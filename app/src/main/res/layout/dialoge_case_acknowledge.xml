<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/roundshapelayout"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/textLayout"
        android:layout_width="@dimen/x320"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/x10"
        android:gravity="center"
        android:orientation="vertical">

      <ImageView
          android:layout_width="@dimen/x200"
          android:layout_height="wrap_content"
          android:src="@drawable/logo"/>


        <com.app.court.ui.views.AnyTextView
            android:id="@+id/txt_logout_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x20"
            android:layout_marginLeft="@dimen/x20"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.7"
            android:gravity="center"
            android:text="@string/confirm_acknowledgement"
            android:textColor="@color/black"
            android:textSize="@dimen/x17"
            app:typeface="Roboto-Regular.ttf" />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:alpha="0.2"
        android:background="@color/dark_grey" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/textLayout"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginRight="@dimen/x7"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/yes"
            android:textAllCaps="false"
            android:textColor="@color/app_orange"
            android:textSize="@dimen/x18" />


        <View
            android:layout_width="@dimen/x1"
            android:layout_height="fill_parent"
            android:alpha="0.2"
            android:background="@color/dark_grey" />


        <Button
            android:id="@+id/btn_No"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x7"
            android:layout_weight="1"
            android:background="@color/transparent"
            android:text="@string/no"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="@dimen/x18" />


    </LinearLayout>

</LinearLayout>
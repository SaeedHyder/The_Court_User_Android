<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="onClick"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.app.court.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/select_affiliation"
            android:textColor="@color/black"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <Spinner
            android:id="@+id/sp_affiliation"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x5"
            android:gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x8"
            android:alpha="0.2"
            android:background="@color/light_grey" />

        <com.app.court.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/select_specialization"
            android:textColor="@color/black"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <Spinner
            android:id="@+id/sp_specialization"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x8"
            android:alpha="0.2"
            android:background="@color/light_grey" />

        <com.app.court.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/rating"
            android:textColor="@color/black"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <com.app.court.ui.views.CustomRatingBar
            android:id="@+id/rating_bar"
            android:layout_width="@dimen/x150"
            android:layout_height="@dimen/x30"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            app:maxStars="5"
            app:halfStars="false"
            app:stars="0"
            app:starPadding="@dimen/x5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x8"
            android:alpha="0.2"
            android:background="@color/light_grey" />

        <com.app.court.ui.views.AnyTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:alpha="0.8"
            android:gravity="start"
            android:maxLines="1"
            android:text="@string/select_language"
            android:textColor="@color/black"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal" />

        <Spinner
            android:id="@+id/sp_language"
            style="@style/spinner_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x30"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x10"
            android:gravity="center_vertical" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x8"
            android:alpha="0.2"
            android:background="@color/light_grey" />

        <com.app.court.ui.views.AnyTextView
            android:id="@+id/tv_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x20"
            android:alpha="0.8"
            android:gravity="start"
            android:hint="@string/select_location"
            android:imeOptions="actionDone"
            android:maxLength="99"
            android:maxLines="5"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/x15"
            app:typeface="@string/font_normal"
            android:visibility="gone"/>

        <com.app.court.ui.views.AutoCompleteLocation
            android:id="@+id/tv_autocomplete"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x45"
            android:layout_gravity="start|center_vertical"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x10"
            android:layout_marginTop="@dimen/x20"
            android:alpha="0.8"
            android:gravity="start"
            android:hint="@string/select_location"
            android:imeOptions="actionDone"
            android:maxLength="99"
            android:maxLines="5"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="@dimen/x15"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:layout_marginEnd="@dimen/x20"
            android:layout_marginStart="@dimen/x20"
            android:layout_marginTop="@dimen/x8"
            android:alpha="0.2"
            android:background="@color/light_grey" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/x30"
            android:layout_marginEnd="@dimen/x30"
            android:layout_marginStart="@dimen/x30"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/rounded_button"
            android:text="@string/submit"
            android:textColor="@color/white"
            android:textSize="@dimen/x18" />

    </LinearLayout>
</ScrollView>